<%- include('partials/header') -%>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <h2><%= posts[i].title%></h2>
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
            <form
              class="col-1"
              action="/post/completedPost/<%= posts[i].id %>?_method=PUT"
              method="POST"
            >
            <button class="btn btn-primary fa fa-caution"  type="submit"><%= posts[i].completedName ? 'Completed by '+posts[i].completedName : 'Unclaimed' %></button>
            </form>
          </li>
        <% } %>
        </ul>
    </div>
    <div class="text-center">
      <a class="btn btn-primary" href="/profile">Return to Feed</a>
    </div>  
  </div>  
</div>  
<%- include('partials/footer') -%>